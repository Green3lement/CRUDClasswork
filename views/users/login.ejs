<div class="data-form">
    <form class="form-signin" action="/users/login" method="POST">
        <h2>Login</h2>
        <label for="txtEmail">Email:</label>
        <input class="form-control" type="email" name="email" id="txtEmail" class="form-control" placeholder="Email" required autofocus>
        <label for="txtPassword">Password:</label>
        <input class="form-control" type="password" name="password" id="txtPassword" class="form-control" placeholder="Password" required>
        <button type="submit" class="btn btn-lg btn-primary">Login</button>

    </form>
</div>